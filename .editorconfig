root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_size = 2
indent_style = space
max_line_length = 100
quote_type = double
trim_trailing_whitespace = true

[*.cmd]
end_of_line = crlf

[{*.mdx?}]
trim_trailing_whitespace = false

[{*.mk,Makefile}]
indent_style = tab
